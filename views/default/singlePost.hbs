<div class="slider">
    <div class="display-table  center-text">
        <h1 class="title display-table-cell"><b>{{post.category.title}}</b></h1>
    </div>
</div><!-- slider -->

<section class="post-area section">
    <div class="container">

        <div class="row">

            <div class="col-lg-8 col-md-12 no-right-padding">

                <div class="main-post">

                    <div class="blog-post-inner">

                        <h3 class="title" style="text-align: center"><b>{{post.title}}</b></h3>

                        <div class="post-image"><img src="{{post.file}}" alt="Blog Image"></div>

                        <div class="para">{{post.description}}</div>
                        <ul class="tags">
                            {{#each categories}}
                            <li><a href="#">{{title}}</a></li>
                             {{/each}}
                        </ul>
                    </div><!-- blog-post-inner -->

                    <div class="post-icons-area">
                        <ul class="post-icons">
                            <li><a href="#"><i class="ion-heart"></i>57</a></li>
                            <li><a href="#"><i class="ion-chatbubble"></i>6</a></li>
                            <li><a href="#"><i class="ion-eye"></i>138</a></li>
                        </ul>

                        <ul class="icons">
                            <li>SHARE : </li>
                            <li><a href="#"><i class="ion-social-facebook"></i></a></li>
                            <li><a href="#"><i class="ion-social-twitter"></i></a></li>
                            <li><a href="#"><i class="ion-social-pinterest"></i></a></li>
                        </ul>
                    </div>

                    <div class="post-footer post-info">

                        <div class="left-area">
                            <a class="avatar" href="#"><img src="{{post.user.avatar}}" alt="Profile Image"></a>
                        </div>

                        <div class="middle-area">
                            <a class="name" href="/userInfo/{{post.user.id}}"><b>{{post.user.firstName}} {{post.user.lastName}}</b></a>
                            <h6 class="date">on {{post.creationDate}}</h6>
                        </div>

                    </div><!-- post-info -->


                </div><!-- main-post -->
            </div><!-- col-lg-8 col-md-12 -->

            <div class="col-lg-4 col-md-12 no-left-padding">

                <div class="single-post info-area">

                    <div class="sidebar-area about-area">
                        <h4 class="title"><b>ABOUT US</b></h4>
                        <p></p>
                    </div>
                    <div class="tag-area">

                        <h4 class="title"><b>CONTACT WITH US</b></h4>
                        <ul>
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Instagram</a></li>
                            <li><a href="#">twitter</a></li>
                        </ul>

                    </div><!-- subscribe-area -->

                </div><!-- info-area -->

            </div><!-- col-lg-4 col-md-12 -->

        </div><!-- row -->

    </div><!-- container -->
</section><!-- post-area -->


<section class="recomended-area section">
    <div class="container">
        <div class="row">

        </div><!-- row -->

    </div><!-- container -->
</section>

<section class="comment-section">
    <div class="container">
        <h4><b>POST COMMENT</b></h4>
        <div class="row">

            <div class="col-lg-8 col-md-12">
                <div class="comment-form">
                    <form action="/post/{{post._id}}" method="post">
                        <div class="row">
                            <div class="col-sm-12">
                                {{!-- <textarea name="contact-form-message" rows="2" class="text-area-messge form-control"
                                    name="comment_body" placeholder="Enter your comment"></textarea>
                                <input type="hidden" name="id" value="{{post._id}}"> --}}
                                <textarea class="form-control" rows="3" name="comment_body" placeholder="Enter your comment"></textarea>
                                <input type="hidden" name="id" value="{{post._id}}">
                            </div><!-- col-sm-12 -->
                            <div class="col-sm-12">
                                <button class="submit-btn" type="submit"><b>POST COMMENT</b></button>
                            </div><!-- col-sm-12 -->

                        </div><!-- row -->
                    </form>
                </div><!-- comment-form -->

                <h4><b>COMMENTS</b></h4>
                {{#each post.comments}}
                {{#if commentIsApproved}}
                <div class="commnets-area">

                    <div class="comment">

                        <div class="post-info">

                            <div class="left-area">
                                <a class="avatar" href="#"><img src="/images/avatar-1-120x120.jpg"
                                        alt="Profile Image"></a>
                            </div>

                            <div class="middle-area">
                                <a class="name" href="#"><b>{{user.firstName}} {{user.lastName}}</b></a>
                                <h6 class="date">{{comments.date}}</h6>
                            </div>

                        </div><!-- post-info -->
                        {{body}}
                    </div>
                </div><!-- col-lg-8 col-md-12 -->
                {{/if}}

                {{/each}}
            </div><!-- row -->

        </div><!-- container -->
</section>